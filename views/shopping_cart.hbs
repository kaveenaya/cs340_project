<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/styles.css">
  <title>Moonlight Melodies - Sales</title>
</head>
<body>
  <header>
</header>
<h2>Shopping Cart Table </h2>
{{!-- Create a table --}}
<table id="shoppingCart-table">

    {{!-- Header section --}}
<thead>
    <tr>
        <th>Shopping Cart ID</th>
        <th>Sales ID</th>
        <th>Song ID</th>
        <th>Instrument ID</th>
        <th>Song Quantity</th>
        <th>Instrument Quantity</th>
        <th>Item Total Price</th>
        <th>Delete</th>
    </tr>
</thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.shoppingCartID}}>
            <td>{{this.shoppingCartID}}</td>
            <td>{{this.salesID}}</td>
            <td>{{this.songID}}</td>
            <td>{{this.instrumentID}}</td>
            <td>{{this.songQuantity}}</td>
            <td>{{this.instrumentQuantity}}</td>
            <td>{{this.itemTotalPrice}}</td>
             <td><button onclick="deleteShoppingCart({{this.shoppingCartID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_cart.js"></script>

<!-- /views/index.hbs -->
<h2>Adding a Shopping Cart for the Specific Customer</h2>
<p>To add a new shopping cart, please enter their information below and click `Submit`!</p>
<form id="add-shoppingCart-form" method="POST" action="/add-shoppingCart-form">
    <label for="input-saleid">Select the Sale ID: </label>
    <select name="input-saleid" id="input-saleid-ajax">
        <option value="">Select an Sale ID</option>
        {{#each saleIDS}}
        <option value="{{this.salesID}}">{{this.salesID}}</option>
        {{/each}}
    </select>

    <label for="input-songid">Select the Song: </label>
    <select name="input-songid" id="input-songid-ajax">
        <option value="">Select an Song</option>
        <option value="NULL">NULL</option>
        {{#each songIDS}}
        <option value="{{this.songID}}">{{this.songID}}. {{this.songName}}</option>
        {{/each}}
    </select>

    <label for="input-instrumentid">Select the Instrument: </label>
    <select name="input-instrumentid" id="input-instrumentid-ajax">
        <option value="">Select an Instrument</option>
        <option value="NULL">NULL</option>
        {{#each instrumentIDS}}
        <option value="{{this.instrumentID}}">{{this.instrumentID}}. {{this.instrumentName}}</option>
        {{/each}}
    </select>

    <label for="input-squantity">Song Quantity: </label>
    <input type="number" name="input-squantity" id="input-squantity">

    <label for="input-iquantity">Instrument Quantity: </label>
    <input type="number" name="input-iquantity" id="input-iquantity">

    <label for="input-totalprice">Total Price: </label>
    <input type="number" name="input-totalprice" id="input-totalprice">


    <input type="submit">
</form>


<h2>Updating Shopping Cart Form</h2>
<p>Select the Shopping Cart ID from the dropdown below and update its information:</p>


    <form id="update-shoppingcart-form">

        <label for="update-shoppingcart-id">Select the Shopping Cart ID: </label>
        <select name="update-shoppingcart-id" id="update-shoppingcart-id">
        <option value="">Select a Shopping Cart ID</option>
            {{#each shoppingCartIDS}}
            <option value="{{this.shoppingCartID}}">{{this.shoppingCartID}} </option>
            {{/each}}
        </select>


        <label for="update-shoppingcart-sales-id">Update the Sales ID: </label>
        <select name="update-shoppingcart-sales-id" id="update-shoppingcart-sales-id">
        <option value="">Select a Sale ID</option>
            {{#each salesIDS}}
            <option value="{{this.salesID}}">{{this.salesID}} </option>
            {{/each}}
        </select>

        <label for="update-shoppingcart-song-id">Update the Song ID: </label>
        <select name="update-shoppingcart-song-id" id="update-shoppingcart-song-id">
        <option value="">Select a Song ID</option>
            {{#each songIDS}}
            <option value="{{this.songID}}">{{this.songID}} </option>
            {{/each}}
        </select>

        <label for="update-shoppingcart-instrument-id">Update the Instrument ID: </label>
        <select name="update-shoppingcart-instrument-id" id="update-shoppingcart-instrument-id">
        <option value="">Select an Instrument ID</option>
            {{#each instrumentIDS}}
            <option value="{{this.instrumentID}}">{{this.instrumentID}} </option>
            {{/each}}
        </select>

        <label for="update-shoppingcart-song-quantity">Update the Song Quantity: </label>
        <input type="text" name="update-shoppingcart-song-quantity" id="update-shoppingcart-song-quantity">

        <label for="update-shoppingcart-instrument-quantity">Update the Instrument Quantity: </label>
        <input type="text" name="update-shoppingcart-instrument-quantity" id="update-shoppingcart-instrument-quantity">

        <label for="update-shoppingcart-item-total-price">Update the Item Total Price: </label>
        <input type="text" name="update-shoppingcart-item-total-price" id="update-shoppingcart-item-total-price">
    

        <input type="submit" onclick="return confirm('You are about to update the shoppingcart. Are you Sure?')"/>

    </form>

<script src="./js/update_shoppingCart.js"></script>
</form>

</body>
</html>