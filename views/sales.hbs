<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles.css">
  <title>Moonlight Melodies - Sales</title>
</head>
<body>
  <header>
</header>
<h2>Sales Table </h2>
  <table id="sales-table">
<thead>
    <tr>
        <th>Sales ID</th>
        <th>Customer ID</th>
        <th>Employee ID</th>
        <th>Sale Date</th>
        <th>Sale Time</th>
        <th>Sale Amount</th>
        <th>Delete</th>
    </tr>
</thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.salesID}}>
            <td>{{this.salesID}}</td>
            <td>{{this.customerID}}</td>
            <td>{{this.employeeID}}</td>
            <td>{{this.saleDate}}</td>
            <td>{{this.saleTime}}</td>
            <td>{{this.saleAmount}}</td>
            <td><button onclick="deleteSale('{{this.salesID}}')">Delete</button></td>

        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_sales.js"></script>

<!-- /views/index.hbs -->
<h2>Add Sales</h2>
<p>To add a new sale, please enter their information below and click `Submit`!</p>
<form id="add-sale-form" method="POST" action="/add-sale-form">
    <label for="input-customerid">Select the Customer ID: </label>
    <select name="input-customerid" id="input-customerid-ajax">
        <option value="">Select an Customer ID</option>
        {{#each customerIDS}}
        <option value="{{this.customerID}}">{{this.customerID}}</option>
        {{/each}}
    </select>
    
    <label for="input-employeeid">Select the Employee ID: </label>
    <select name="input-employeeid" id="input-employeeid-ajax">
        <option value="">Select an Employee ID</option>
        {{#each employeeIDS}}
        <option value="{{this.employeeID}}">{{this.employeeID}}</option>
        {{/each}}
    </select>

    <label for="input-date">Sale Date: </label>
    <input type="date" name="input-date" id="input-date">

    <label for="input-time">Sale Time: </label>
    <input type="time" name="input-time" id="input-time">

    <input type="submit">
</form>


<h2>Updating instruments</h2>
<p>Select the instrument from the dropdown below and update its information:</p>

<form id="update-instrument-form">

    <label for="input-instrument">Select the Instrument ID: </label>
    <select name="input-instrument" id="input-instrument-ajax">
        <option value="0">Select an Instrument ID</option>
        {{#each instrumentIDS}}
        <option value="{{this.instrumentID}}">{{this.instrumentID}}</option>
        {{/each}}
    </select>


    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name">
    
    <label for="input-color">Color: </label>
    <input type="text" name="input-color" id="input-color">

    <label for="input-material">Material: </label>
    <input type="text" name="input-material" id="input-material">

    <label for="input-size">Size: </label>
    <input type="text" name="input-size" id="input-size">

    <label for="input-year">Year: </label>
    <input type="number" name="input-year" id="input-year">

    <label for="input-price">Price: </label>
    <input type="number" name="input-price" id="input-price">

    <input type="submit">

</form>
</body>
</html>