<!-- index.hbs -->

{{!-- Create a table --}}
<table id="customers-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.customerID}}>
            <td>{{this.customerID}}</td>
            <td>{{this.customerName}}</td>
            <td>{{this.customerPhone}}</td>
            <td>{{this.customerDateOfPurchase}}</td>
             <td><button onclick="deleteCustomer({{this.customerID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_customer.js"></script>

<!-- /views/index.hbs -->
<h2>Adding Data using an HTML form</h2>
<p>To add a new customer, please enter their information below nad click `Submit`!</p>
<form id="add-customer-form" method="POST" action="/add-customer-form">
    <label for="input-id">ID: </label>
    <input type="number" name="input-id" id="input-id">

    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name">
    
    <label for="input-phone">Phone Number: </label>
    <input type="text" name="input-phone" id="input-phone">

    <label for="input-date">Date of Purchase: </label>
    <input type="text" name="input-date" id="input-date">

    <input type="submit">
</form>


<h2>Updating Customers Form</h2>
<p>Select the customerID from the dropdown below and update its information:</p>
<fieldset>
    <form id="update-customer-form">

        <label for="update-customer-id">Select the customer ID: </label>
        <select name="update-customer-id" id="update-customer-id">
            {{#each customerIDS}}
            <option value="{{this.customerID}}">{{this.customerID}}</option>
            {{/each}}
        </select>


        <label for="update-customer-name"> customer Name: </label>
        <input type="text" name="update-customer-name" id="update-customer-name">
        
        <label for="update-customer-phone"> customer phone: </label>
        <input type="text" name="update-customer-phone" id="update-customer-phone">

        <label for="update-customer-DOP">Customer Date of Purchase (YYYY-MM-DD): </label>
        <input type="text" name="update-customer-DOP" id="update-customer-DOP">

        <input type="submit" onclick="return confirm('You are about to update the customer. Are you Sure?')"/>

    </form>
</fieldset>
<script src="./js/update_customer.js"></script>
